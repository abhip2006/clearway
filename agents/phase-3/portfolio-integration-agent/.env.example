# Portfolio Integration Agent - Environment Variables
# Copy this file to .env and fill in your values

# ==========================================
# Server Configuration
# ==========================================
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# ==========================================
# Database Configuration
# ==========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=clearway_portfolio
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password

# ==========================================
# Redis Configuration
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# ==========================================
# Black Diamond Integration
# ==========================================
BLACK_DIAMOND_CLIENT_ID=your_black_diamond_client_id
BLACK_DIAMOND_CLIENT_SECRET=your_black_diamond_client_secret
BLACK_DIAMOND_API_URL=https://api.blackdiamond.com/v1
BLACK_DIAMOND_OAUTH_URL=https://oauth.blackdiamond.com

# ==========================================
# Orion Integration
# ==========================================
ORION_API_URL=https://api.orion.com/v1
ORION_ENVIRONMENT=production

# Note: Orion API keys are configured per connection, not globally

# ==========================================
# Addepar Integration
# ==========================================
ADDEPAR_CLIENT_ID=your_addepar_client_id
ADDEPAR_CLIENT_SECRET=your_addepar_client_secret
ADDEPAR_API_URL=https://api.addepar.com/v1
ADDEPAR_OAUTH_URL=https://oauth.addepar.com

# ==========================================
# Security & Encryption
# ==========================================
# 32-character encryption key for AES-256
ENCRYPTION_KEY=your_32_character_encryption_key

# JWT secret for authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=24h

# ==========================================
# Sync Configuration
# ==========================================
SYNC_DEFAULT_FREQUENCY_MINUTES=360
SYNC_MAX_RETRIES=3
SYNC_BATCH_SIZE=1000
SYNC_TIMEOUT_MS=30000

# ==========================================
# Monitoring & Logging
# ==========================================
# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# ==========================================
# RabbitMQ (Optional - for async operations)
# ==========================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# ==========================================
# CORS Configuration
# ==========================================
CORS_ORIGIN=http://localhost:3000,https://clearway.app
CORS_CREDENTIALS=true

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# ==========================================
# Feature Flags
# ==========================================
ENABLE_BIDIRECTIONAL_SYNC=true
ENABLE_WEBHOOK_SYNC=false
ENABLE_ADVANCED_ANALYTICS=true

# ==========================================
# Development Settings
# ==========================================
# Set to true to enable debug logging
DEBUG=false

# Set to true to use mock data instead of real API calls
USE_MOCK_DATA=false
