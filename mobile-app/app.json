{
  "expo": {
    "name": "Clearway",
    "slug": "clearway-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0066FF"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.clearway.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Camera is needed to capture documents",
        "NSPhotoLibraryUsageDescription": "Photo library access is needed to select documents",
        "NSFaceIDUsageDescription": "Face ID is needed for secure authentication"
      },
      "associatedDomains": [
        "applinks:clearway.app"
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0066FF"
      },
      "package": "com.clearway.mobile",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "USE_BIOMETRIC",
        "INTERNET"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "clearway.app"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-camera",
      "expo-notifications",
      "@react-native-firebase/app",
      "@react-native-firebase/messaging"
    ],
    "scheme": "clearway",
    "extra": {
      "eas": {
        "projectId": "clearway-mobile-001"
      }
    }
  }
}
